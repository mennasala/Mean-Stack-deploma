{{>header}}
{{>navbar}}
<section class="my-5 container">
  <form method="post">
    <div class="mb-3">
      <input
        class="form-control"
        name="id"
        placeholder="id"
        value="{{result.id}}"
        disabled
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="bookName"
        placeholder="bookName"
        value="{{result.bookName}}"
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="bookWriter"
        placeholder="bookWriter"
        value="{{result.bookWriter}}"
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="department"
        placeholder="department"
        value="{{result.department}}"
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="numberOfPages"
        placeholder="numberOfPages"
        value="{{result.numberOfPages}}"
      />
    </div>
    <div class="mb-3">
      <button class="btn btn-primary">Edit</button>
    </div>
  </form>
</section>
{{>footer}}